<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white2"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <com.graduation.healthapp.ui.login.TitleLayout
        android:id="@+id/verify_titlelayout"
        app:leftIcon="@mipmap/left_arrow"
        app:text="验证码"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
    </com.graduation.healthapp.ui.login.TitleLayout>

    <TextView
        android:text="请输入验证码"
        android:textSize="@dimen/dp_26"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_margin="@dimen/dp_15"
        android:gravity="center|left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:id="@+id/verifyinfo"
        android:text="验证码已发送至 188 6666 9999"
        android:textSize="@dimen/dp_14"
        android:textColor="#999999"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:gravity="center|left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>


    <com.graduation.healthapp.ui.login.VerifyComponent
        android:id="@+id/verifyinput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:number="6"
        android:layout_gravity="center">
    </com.graduation.healthapp.ui.login.VerifyComponent>

</LinearLayout>