<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.graduation.healthapp.ui.login.TitleLayout
            android:id="@+id/titlebar"
            app:leftIcon="@mipmap/left_arrow"
            app:text="饮食分析报告"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
        </com.graduation.healthapp.ui.login.TitleLayout>

        <com.github.mikephil.charting.charts.RadarChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_250" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_310"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            app:cardCornerRadius="@dimen/dp_10"
            app:cardElevation="0px"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.graduation.healthapp.ui.my.FixedEditText
                    android:id="@+id/item1"
                    android:padding="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    app:rRadius="@dimen/dp_10"
                    android:textSize="@dimen/sp_14"
                    android:enabled="false"
                    android:background="#f1f1f1"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">
                </com.graduation.healthapp.ui.my.FixedEditText>
                <com.graduation.healthapp.ui.my.FixedEditText
                    android:id="@+id/item2"
                    android:padding="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    app:rRadius="@dimen/dp_10"
                    android:textSize="@dimen/sp_14"
                    android:enabled="false"
                    android:background="#f1f1f1"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">
                </com.graduation.healthapp.ui.my.FixedEditText>
                <com.graduation.healthapp.ui.my.FixedEditText
                    android:id="@+id/item3"
                    android:padding="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    app:rRadius="@dimen/dp_10"
                    android:textSize="@dimen/sp_14"
                    android:enabled="false"
                    android:background="#f1f1f1"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">
                </com.graduation.healthapp.ui.my.FixedEditText>
                <com.graduation.healthapp.ui.my.FixedEditText
                    android:id="@+id/item4"
                    android:padding="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    app:rRadius="@dimen/dp_10"
                    android:textSize="@dimen/sp_14"
                    android:enabled="false"
                    android:background="#f1f1f1"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">
                </com.graduation.healthapp.ui.my.FixedEditText>
                <com.graduation.healthapp.ui.my.FixedEditText
                    android:id="@+id/item5"
                    android:padding="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    app:rRadius="@dimen/dp_10"
                    android:textSize="@dimen/sp_14"
                    android:enabled="false"
                    android:background="#f1f1f1"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">
                </com.graduation.healthapp.ui.my.FixedEditText>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!--进度-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/progress"
            android:visibility="gone"
            android:background="#99cccccc"
            android:layout_gravity="center"
            android:padding="@dimen/dp_140"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ProgressBar>
    </FrameLayout>

</FrameLayout>