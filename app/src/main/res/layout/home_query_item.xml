<?xml version="1.0" encoding="utf-8"?>
<com.graduation.healthapp.ui.find.RoundedLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    app:rRadius="@dimen/dp_10"
    android:background="#ffffff"
    android:orientation="horizontal">

    <com.graduation.healthapp.ui.find.RoundedTextView
        android:id="@+id/pm"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_gravity="center"
        android:background="#000000"
        android:visibility="gone"
        android:text="1"
        android:gravity="center"
        app:rRadius="@dimen/dp_500"
        android:textColor="#ffffff"
        android:layout_marginRight="@dimen/dp_10">
    </com.graduation.healthapp.ui.find.RoundedTextView>

    <ImageView
        android:id="@+id/image"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50">
    </ImageView>

    <TextView
        android:id="@+id/text"
        android:padding="@dimen/dp_10"
        android:gravity="left|center"
        android:textSize="@dimen/sp_10"
        android:text="描述文字"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
    </TextView>

    <Button
        android:id="@+id/bt1"
        android:text="添加"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_35">
    </Button>

</com.graduation.healthapp.ui.find.RoundedLinearLayout>